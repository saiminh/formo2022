{
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "single",
			"title": "Blog Post",
			"postTypes": [
				"post"
			]
		},
		{
			"name": "team",
			"title": "team",
			"postTypes": [
				"page"				
			]
		},
    {
      "name": "single-formo2022_recipe",
      "title": "Recipe",
      "postTypes": [
        "formo2022_recipe"
      ]
    },
    {
      "name": "single-formo2022_event",
      "title": "Event",
      "postTypes": [
        "formo2022_event"
      ]
    },
    {
      "name": "single-formo2022_teammember",
      "title": "Team Member",
      "postTypes": [
        "formo2022_teammember"
      ]
    }
	],
	"settings": {
		"appearanceTools": true,
		"color": {
      "duotone": [],
			"palette": [
        {
          "slug": "formo-grey",
          "color": "#edeaff",
          "name": "Formo Grey"
        },
				{
					"slug": "formo-blue",
					"color": "#0000ff",
					"name": "Formo Blue"
				},
				{
					"slug": "formo-darktone",
					"color": "#0a0a37",
					"name": "Formo Darktone"
				},
        {
          "slug": "formo-yellow",
          "color": "#ffca11",
          "name": "Formo Yellow"
        },
				{
          "slug": "formo-peach",
					"color": "#FE5121",
					"name": "Formo Peach"
				},
				{
          "slug": "formo-green",
					"color": "#119e38",
					"name": "Formo Green"
				},
				{
          "slug": "formo-cream",
					"color": "#fff7e8",
					"name": "Formo Cream"
				},
        {
          "slug": "formo-white",
          "color": "#ffffff",
          "name": "White"
        }
			]
		},
		"custom": {
			"spacing": {
				"small": "clamp(1.25rem, 5vw, 3rem)",
				"medium": "clamp(2.5rem, 8vw, 6rem)",
				"large": "clamp(4rem, 10vw, 8rem)",
				"outer": "clamp(20px, 1.415vw, 40px)",
        "between": "clamp(15px, 1.67vw, 30px)"
			},
      "width" : {
        "col-1": "calc( ( 100vw - 2 * var(--wp--custom--spacing--outer) ) / 12 )",
        "col-2": "calc( 2 * var(--wp--custom--width--col-1) )",
        "col-3": "calc( 3 * var(--wp--custom--width--col-1) )",
        "col-4": "calc( 4 * var(--wp--custom--width--col-1) )",
        "col-5": "calc( 5 * var(--wp--custom--width--col-1) )",
        "col-6": "calc( 6 * var(--wp--custom--width--col-1) )",
        "col-7": "calc( 7 * var(--wp--custom--width--col-1) )",
        "col-8": "calc( 8 * var(--wp--custom--width--col-1) )",
        "col-9": "calc( 9 * var(--wp--custom--width--col-1) )",
        "col-10": "calc( 10 * var(--wp--custom--width--col-1) )",
        "col-11": "calc( 11 * var(--wp--custom--width--col-1) )",
        "col-12": "calc( 12 * var(--wp--custom--width--col-1) )"
      },
      "height" : {
        "navbar": "65px"
      },
			"typography": {
				"font-size": {
          "small": "clamp(16px, 5.128vw, 20px)",
          "regular": "clamp(20px, 7.692vw, 40px)",
					"large": "clamp(2.25rem, 8vw, 2.75rem)",
					"huge": "clamp(2.75rem, 9vw, 3.25rem)",
					"colossal": "clamp(3.25rem, 10vw, 6.25rem)",
					"hero": "clamp(60px, 10vw, 150px)"
				},
				"line-height": {
					"tiny": ".8",
					"small": 1.1,
					"medium": 1.2,
					"normal": 1.3
				}
			}
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
          "fontFamily": "Krana, sans-serif",
					"name": "Krana",
					"slug": "krana",
          "fontFace": [
            {
              "fontFamily": "Krana",
              "fontStyle": "normal",
              "fontWeight": "600",
              "src": [ "file:./assets/webfonts/krana_fat_a-webfont.woff2" ]
            }, {
              "fontFamily": "Krana",
              "fontStyle": "normal",
              "fontWeight": "800",
              "src": [ "file:./assets/webfonts/krana_fat_b-webfont.woff2" ]
            }
          ]
				},
				{
					"fontFamily": "Roobert, sans-serif",
					"name": "Roobert",
					"slug": "roobert",
					"fontFace": [
						{
              "fontFamily": "Roobert",
							"fontWeight": "300",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/webfonts/Roobert-Light.woff2" ]
						},
						{
              "fontFamily": "Roobert",
							"fontWeight": "600",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/webfonts/Roobert-SemiBold.woff2" ]
						}
					]
				}
			],
      "defaultFontSizes": false,
			"fontSizes": [
				{
					"size": "clamp(0.66rem , 0.6vw, 1rem)",
					"slug": "tiny",
          "name": "Tiny"
				},
				{
					"size": "clamp(.75rem, 1vw, 1.25rem)",
					"slug": "small",
          "name": "Small"
				},
				{
					"size": "clamp(1rem, 1.4vw, 1.56rem)",
					"slug": "body",
          "name": "Body"
				},
				{
					"size": "clamp(1.25rem, 1.67vw, 1.875rem)",
					"slug": "medium"
				},
				{
					"size": "clamp(1.5rem, 2vw, 2.25rem)",
					"slug": "large"
				},
				{
					"size": "clamp(1.75rem, 2.889vw, 3.25rem)",
					"slug": "larger"
				},
				{
					"size": "clamp(2rem, 3.778vw, 4.25rem)",
					"slug": "x-large"
				},
				{
          "size": "clamp(2.25rem, 5.665vw, 6.25rem)",
					"slug": "xx-large",
          "name": "XX-Large"
				},
        {
          "size": "clamp(2.5rem, 8.93vw, 10rem)",
          "slug": "xxx-large",
          "name": "XXX-Large"
        },
        {
          "size": "clamp(4rem, 12.5vw, 13.4rem)",
          "slug": "xxxx-large",
          "name": "XXXX-Large"
        },
        {
          "size": "clamp(5.75rem, 15vw, 16.875rem)",
          "slug": "huge",
          "name": "Huge"
        }
			]
		},
		"layout": {
			"contentSize": "100%",
			"wideSize": "calc(100vw - 2 * var(--wp--custom--spacing--outer))"
		}
	},
	"styles": {
		"blocks": {
			"core/button": {
				"border": {
					"radius": "2em"
				},
				"color": {
					"background": "var(--wp--preset--color--formo-blue)",
					"text": "var(--wp--preset--color--formo-white)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--body)"
				},
        "spacing": {
          "padding": {
            "top": "0.83em",
            "right": "1.39em",
            "bottom": "0.83em",
            "left": "1.39em"
          }
        }
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--krana)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"core/post-comments": {
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--small)"
					}
				}
			},
			"core/pullquote": {
				"border": {
					"width": "1px 0"
				}
			},
			"core/query-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--small)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"core/quote": {
				"border": {
					"width": "1px"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "normal",
					"fontWeight": "normal"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--formo-cream)",
			"text": "var(--wp--preset--color--formo-darktone)"
		},
		"elements": {
			"h1": {
				"typography": {
          "fontFamily": "var(--wp--preset--font-family--krana)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--xxx-large)"
				}
			},
			"h2": {
				"typography": {
          "fontFamily": "var(--wp--preset--font-family--krana)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--small)",
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h3": {
				"typography": {
          "fontFamily": "var(--wp--preset--font-family--krana)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--tiny)",
					"fontSize": "var(--wp--preset--font-size--larger)"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"fontWeight": "300",
					"textTransform": "uppercase",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"fontWeight": "300",
					"textTransform": "uppercase",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"p": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--roobert)",
					"fontWeight": "300",
					"lineHeight": "var(--wp--custom--typography--line-height--normal)",
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--formo-blue)"
				},
        "typography": {
          "textDecoration": "none"
        }
			}
		},
		"spacing": {
			"blockGap": "0"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--roobert)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},		
    {
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
    {
      "name": "logo",
      "title": "Logo",
      "area": "general"
    }
	]
}
